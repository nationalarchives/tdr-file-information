{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./src",
        "moduleResolution": "node"
    },
    "include": ["src/*"],
    "exclude": ["dist/**"]
}
