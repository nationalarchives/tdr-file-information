library("tdr-jenkinslib")

def versionTag = "v${env.BUILD_NUMBER}"
def repo = "tdr-file-metadata"

pipeline {
  agent {
    label "master"
  }

  stages {
    stage("Run git secrets") {
      steps {
        script {
          tdr.runGitSecrets(repo)
        }
      }
    }
    stage("Run tests") {
        agent {
            ecs {
                inheritFrom "npm"
            }
        }
        steps {
            script {
                tdr.reportStartOfBuildToGitHub(repo)
            }
            checkout scm
            sh 'npm ci'
            sh 'npm test'
	        sh 'npm run lint'
        }
    }
    stage('Post-build') {
        when {
            expression { env.BRANCH_NAME == "master"}
        }
        stages {
            stage('Tag Release') {
                steps {
                    sh "git tag ${versionTag}"
                    sshagent(['github-jenkins']) {
                        sh("git push origin ${versionTag}")
                    }
                }
            }
            stage('Publish package') {
                steps {
                    build(
                        job: "TDR File Metadata Publish",
                        parameters: [
                            string(name: "VERSION", value: "patch")
                        ],
                        wait: false)
                }
            }
        }
    }
  }
  post {
          failure {
            node('master') {
              script {
                tdr.reportFailedBuildToGitHub(repo)
              }
            }
          }
          success {
            node('master') {
              script {
                tdr.reportSuccessfulBuildToGitHub(repo)
              }
            }
          }
      }
}
